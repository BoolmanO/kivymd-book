<M3Switch@GridLayout>
    cols: 2
    text: ""
    event: app.like.bool_function
    switch_active: app.func_wrap(self.event, m3switch.active)
    default_active: True # FIXME

    M3Label:
        text: root.text

    AnchorLayout:
        anchor_x: 'right'
        size_hint_x: 0.5
        padding: sp(40)

        MDSwitch:
            id: m3switch
            active: root.default_active
            icon_active: "check"
            icon_active_color: "white"
            icon_inactive: "close"
            icon_inactive_color: "black"
            on_active: root.switch_active.do() # FIXME fix this in future