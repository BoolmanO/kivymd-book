<GoToLessonCard@MDCard>
    #md_bg_color: app.theme_cls.bg_darkest
    size_hint_y: text_box.size_hint_y
    #size: text_box.size[0]+sp(5), text_box.size[1]+sp(5)
    text: ""
    subtext: ""
    go_to: app.like.screen_name
    #pos: text_box.pos
    ripple_behavior: True
    elevation: 4
    shadow_softness: 14
    shadow_color: 0, 0, 0, 0.65
    on_touch_up: app.sm.current=self.go_to

    MDBoxLayout:
        orientation: "vertical"
        padding: sp(7), sp(7)
        size_hint_y: None
        id: text_box

        M3TextLabel:
            font_size: sp(16)
            text: root.text

        AnchorLayout:
            anchor_y: 'top'

            M3TextLabel:
                font_size: sp(12)
                text: root.subtext
            
