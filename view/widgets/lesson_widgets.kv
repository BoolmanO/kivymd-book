<GoToLessonCard@MDCard>
    #md_bg_color: app.theme_cls.bg_darkest
    size_hint_y: None   
    size: sp(300), sp(125)

    text: ""
    subtext: ""
    go_to: app.like.screen_name
    ripple_behavior: True
    on_touch_up: app.sm.current=self.go_to

    orientation: 'vertical'
    #spacing: sp(15)
    padding: sp(12), sp(12)

    M3TextLabel:
        id: header
        font_size: sp(16)
        text: root.text

    M3TextLabel:
        id: subtext
        font_size: sp(12)
        text: root.subtext