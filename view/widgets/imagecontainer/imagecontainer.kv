<ZoomingImage>
    #size: self.texture_size
    size_hint_y: None
    size: app.window.size

<ZoomingImageScreen>
    BoxLayout:
        size_hint_y: 0.9
        orientation:'vertical'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            ScatterImage:
                size: app.window.size
                size_hint: None,None
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Image:
                    size: self.parent.size
                    source: root.get_img_source()
            

    ZoomingImageScreenAppBar:
        md_bg_color: app.theme_cls.bg_light
        left_action_items: [["arrow-left-bold", root.back_to_root_screen]]
        elevation: 5
        shadow_softness: 12
        pos_hint: {"top": 1}
        specific_text_color: app.get_icon_color()