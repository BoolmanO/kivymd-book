<M3TextLabel@MDLabel>
    font_size: sp(16)
    #color: app.theme_cls.opposite_bg_darkest
    
<M3Space@MDBoxLayout>:
    orientation: "vertical"
    size_hint_y: 0.05


<M3Label@MDLabel>
    text: ""
    id: m3label
    size: self.texture_size #!REQUIRED
    size_hint_y: None #!REQUIRED


<M3TopAppBar@MDTopAppBar>
    md_bg_color: app.theme_cls.bg_light
    #size: (app.window.size[0], app.window.size[1] / 10+sp(20))
    #anchor_title: "left"
    size_hint_y: None
    elevation: 5
    shadow_softness: 12
    pos_hint: {"top": 1}
    left_action_items: [['arrow-left-bold', app.switch_to_main]] # TODO
    specific_text_color: app.get_icon_color()


<M3RecycleView@MDRecycleView>
    size_hint_y: 1
    do_scroll_x: False
    do_scroll_y: True
    bar_inactive_color: 0,0,0,0

<M3ScrollView@MDScrollView>
    size_hint_y: 1
    do_scroll_x: False
    do_scroll_y: True
    bar_inactive_color: 0,0,0,0

<M3LabelsColumn@BoxLayout>
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height # !REQUIRED
    padding: ('15sp', '15sp', '15sp', '15sp')
    spacing: sp(20)

<M3SettingsColumn@M3LabelsColumn>
    spacing: sp(60)

<M3Button@MDRaisedButton>
    font_size: sp(16)
    elevation: 0
    rounded_button: True
    #text_color: app.theme_cls.opposite_bg_darkest # TODO SOLVE PROBLEMS WITH THEMES!!!