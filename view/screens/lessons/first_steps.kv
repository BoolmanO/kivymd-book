<FirstSteps>
    name: "first_steps"

    MDBoxLayout:
        height: root.height - toolbar.height
        size_hint_y: None
        orientation: 'vertical'

        M3ScrollView:

            M3LabelsColumn:

                M3Label:
                    text: app.text_manager.node("first_steps").get("hello_text")
                    
                MDSeparator:

                ZoomingImage:
                    source: app.path_to("view", "images", "random", ext=".jpg")
                    
                M3Label:
                    text: "text![] "*10

    M3TopAppBar:
        id: toolbar
        #size_hint_y: None