<SettingsScreen>
    name: "settings_screen"

    GridLayout:
        rows:2

        #M3TopAppBar:

        M3RecycleView:
        
            MDBoxLayout:
                orientation: 'vertical'
                height: self.minimum_height
                size_hint_y: None
                padding: sp(20)
                spacing: sp(60)


                M3Switch:
                    widget_default_active: True
                    event: app.change_theme
                    text: "dark theme"

                MDSeparator:
                

                M3Label:
                    text: f"Метаданные процесса:\n{app.formatted_metadata}"