<SettingsScreen>
    name: "settings_screen"

    GridLayout:
        rows:2

        #M3TopAppBar:

        M3ScrollView:
        
            MDBoxLayout:
                orientation: 'vertical'
                height: self.minimum_height
                size_hint_y: None
                padding: sp(20)
                spacing: sp(60)


                M3Switch:
                    default_active: True
                    event: app.change_theme
                    text: "dark theme"


                MDSeparator:

                AnchorLayout:
                    anchor_x: "center"
                    MDDropDownItem:
                        text: "transitions"
                        id: transition_backdrop
                        on_release: root.open_transition_backdrop()